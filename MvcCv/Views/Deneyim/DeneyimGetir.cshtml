@model MvcCv.Models.Entity.TblDeneyimlerim
@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Deneyim Güncelle</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form method="post">

                                <div class="row">
                                    <div class="col-sm-6">
                                        @Html.HiddenFor(x => x.ID)
                                        <label>Başlık</label>
                                        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                                        <br />
                                        <label>Alt Başlık</label>
                                        @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control" })
                                        <br />
                                        <label>Tarih</label>
                                        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                        <br />
                                        <label>Açıklama</label>
                                        @Html.TextAreaFor(x => x.Aciklama, 3, 2, new { @class = "form-control" })
                                        <br />
                                        <button class="btn btn-info">Kaydet</button>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>