@model MvcCv.Models.Entity.TblSertifikalarim 
@{
    ViewBag.Title = "SertifikaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sertifika Ekle</h2>
<br />
<form class="form-group" method="post">
    <label>Sertifika Alınan Kurum</label>
    @Html.TextBoxFor(x => x.Kurum, new { @class = "form-control" })
 
    <br />
    <label>Sertifika Konu</label>
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })

    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />

    <button class="btn btn-info">Kaydet</button>
</form>

